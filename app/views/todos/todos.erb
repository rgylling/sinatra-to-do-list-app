<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-12 bg-white">
      <div>
        <h1 class="log-in text-center"><%="#{current_user.username}'s todos"%></h1>
        <% @todos.each do |todo| %>
          <ul>
            <li>
              <a style="color: #48c7b1; font-size:18px; font-weight:200; line-height:2.5" class="to-do" href="/todos/<%= todo.id %>"><%=todo.content%></a>
              <div style="float:right; margin-top:5px;" class="btn-group" role="group" aria-label="...">
                <a href="todos/<%= todo.id %>/edit"><button style="font-weight:100;border:none;background-color: #70c1bd; color:white" type="button" class="btn btn-default">Edit</button></a>
                <a href="todos/<%= todo.id %>/delete"><button style="font-weight:100;border:none;background-color:#ff7650; color:white" type="button" class="btn btn-default">Delete</button></a>
              </div>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>
